@model Producto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    

    <form asp-controller="Product" asp-action="Editar"  method="post">

        <div class="container">
            <div class="row">
                <input asp-for="id"  type="hidden"> 
                <label for="productoName">Nombre del Producto</label>
                <input asp-for="nombre"  type="text" class="form-control" id="productoName" placeholder="Ingrese el nombre del producto">
                
            </div>
        </div>
        <div class="d-flex justify-content-between">
            <button asp-controller="Product" asp-action="Editar" class="btn btn-primary">Guardar cambios</button>            
        </div>
    </form>
}
