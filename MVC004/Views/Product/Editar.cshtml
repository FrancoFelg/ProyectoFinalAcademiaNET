@model Producto
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{


    <form class="min-vh-80 mt-5" asp-controller="Product" asp-action="Editar" method="post">

        <div class="container">
            <div class="row">
            <h2>Formulario de Edicion de producto</h2>
                <input asp-for="id"  type="hidden"> 
                <label for="productoName">Nombre del Producto</label>
                <input asp-for="nombre"  type="text" class="form-control" id="productoName" placeholder="Ingrese el nombre del producto">                
            </div>
            <div class="row">

                <div class="d-flex p-0 m-0 mt-2">
                    <button asp-controller="Product" asp-action="Editar" class="btn btn-primary">Guardar cambios</button>
                </div>
            </div>
            
        </div>
        
    </form>
}
