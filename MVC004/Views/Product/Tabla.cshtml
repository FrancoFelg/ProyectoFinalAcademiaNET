@model List<Producto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <div class="container min-vh-100">
        <div class="row">
            <table class="table text-white bg-dark">
              <thead>
                <tr>
                  <th scope="col">ID</th>
                  <th scope="col">Nombre</th>                  
                  <th scope="col" colspan="2">Acciones</th>
                </tr>
              </thead>
              <tbody>
                    @foreach (var item in Model)
                    {
                      <tr>
                          <th scope="row"> @item.id </th>
                          <th scope="row"> @item.nombre </th>
                            <td> <a asp-controller="Product" asp-action="Editar" asp-route-id="@item.id" class="btn btn-outline-info">Editar</a> </td>
                            <td><a asp-controller="Product" asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-outline-danger">Delete</a></td>
                        </tr>  
                    }
                    
                
              </tbody>
            </table>
        </div>
    </div>
}
