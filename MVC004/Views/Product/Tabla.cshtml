@model List<Producto>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <div class="container min-vh-100">
        <div class="row">
            <div class="col-12">
                <div class="col-12 py-3 px-2  d-flex align-items-center justify-content-between">
                    <h2>Tabla de Productos</h2>
                    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Crear producto</a>
                </div>
                <table class="table ">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Nombre</th>                            
                            <th scope="col" colspan="2">Opciones</th>                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                              <tr>
                                  <th scope="row"> @item.id </th>
                                  <th scope="row"> @item.nombre </th>
                                    <td> <a asp-controller="Product" asp-action="Editar" asp-route-id="@item.id" class="btn btn-outline-info">Editar</a> </td>
                                    <td><a asp-controller="Product" asp-action="Eliminar" asp-route-id="@item.id" class="btn btn-outline-danger">Delete</a></td>
                                </tr>  
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
