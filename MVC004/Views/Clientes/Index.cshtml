@model List<Clientes>


<body>

<div class="container justify-items-center">
    <h2>lista de Clientes </h2>
    <div class="mb-2">
         <a asp-action="RegCliente" asp-controller="Clientes" class="btn btn-outline-primary">Registrar</a>
    
    </div>

    <div>
 <table class="table table-dark table-striped-columns g-6">
     <tr>
         <th>ID</th>
         <th>Nombre</th>
         <th>Apellido</th>
         <th>Domicilio</th>
         <th>Numero de Documento</th>
         <th>Opcion 1</th>
         <th>Opcion 2</th>


     </tr>
                @foreach (var item in Model)
                {


               <tr>
                    <th>@item.Id</th>
                    <th>@item.nombre</th>
                    <th>@item.apellido_razsoc</th>
                    <th>@item.domicilio</th>
                    <th>@item.doc_nro</th>
                    <th>  <a asp-action="ModCliente" asp-controller="Clientes" class="btn btn-outline-primary" asp-route-id="@item.Id">Modificar</a></th>
                    <th>  <a asp-action="DelCliente" asp-controller="Clientes" class="btn btn-outline-danger" asp-route-id="@item.Id">eliminar</a></th>
                    
               </tr>



                }
 </table>
 </div>
 </div>
</body> 
