@model Clientes

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <!--CSS-->
    <link rel="stylesheet" href="./css/bootstrap.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC004.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

</head>
<body class="gradient">
    
    <div class="container justify-items-center">
        <h2 class="text-center py-2 mt-lg-5 mb-5">Registro de Clientes</h2>
        <form class="row g-3 needs-validation" asp-action="RegCliente" asp-controller="Clientes" method="Post">

            <div class="mb-3">
                <label class="form-label">Usuario</label>
                <input type="text" class="form-control" asp-for="nickname">

            </div>
            <div class="mb-3">
                <label class="form-label">Contraseña</label>
                <input type="text" class="form-control" asp-for="password">

            </div>
            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input type="text" class="form-control" asp-for="nombre">

            </div>
            <div class="mb-3">
                <label class="form-label">Apellido</label>
                <input type="text" class="form-control" asp-for="apellido_razsoc">
            </div>
            <div class="mb-3">
                <label class="form-label">Domicilio</label>
                <input type="text" class="form-control" asp-for="domicilio">

            </div>
            <div class="mb-3">
                <label class="form-label">Localidad</label>
                <input type="text" class="form-control" asp-for="localidad">

            </div>

            <div class="mb-3">
                <label class="form-label">Numero de Documento</label>
                <input type="number" class="form-control" asp-for="doc_nro">

            </div>


            <button type="submit" class="btn btn-outline-primary ">Registrar</button>
        </form>
    </div>


    

    <!--JS-->
    <script src="./"></script>
</body>
</html>







