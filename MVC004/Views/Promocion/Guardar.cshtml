@model Promocion
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <form class="min-vh-80 d-flex flex-column justify-content-center align-items-center" asp-controller="Promocion" asp-action="Guardar" method="post">
        <div class="container">
            <div class="row">
                
                <h2>Crear Promocion</h2>

                <label class="mt-3" for="producto">Ingresar Nro del Producto</label>
                <input asp-for="productoId" type="number" class="form-control" id="producto" placeholder="Ingrese el Nro de Producto">

                <label class="mt-3" for="descuento">Porcentaje del descuento</label>
                <input asp-for="descuento" type="number" class="form-control" id="descuento" placeholder="Ingrese el descuento">
                
            </div>
            <div class="row">
                <div class="d-flex justify-content-between p-0 mt-4">
                    <button asp-controller="Promocion" asp-action="Guardar" class="btn btn-primary">Guardar cambios</button>
                </div>
            </div>
        </div>

    </form>
}
