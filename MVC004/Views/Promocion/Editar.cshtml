@model Promocion
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <form class="min-vh-80" asp-controller="Promocion" asp-action="Create" method="post">
        <input asp-for="id" type="hidden">
        <div class="container">
            <div class="row">


                <label for="productoId">Nro Producto</label>
                <input asp-for="productoId" type="number" class="form-control" id="productoId" placeholder="Nro del producto">

                <label for="descuento">Descuento</label>
                <input asp-for="descuento" type="number" class="form-control" id="v" placeholder="Porcentaje de descuento">                

                <label for="vigencia">Vigencia</label>
                <input asp-for="vigencia" type="checkbox" id="vigencia">

                <div class="d-flex justify-content-between">
                    <button asp-controller="Promocion" asp-action="Editar" class="btn btn-primary">Guardar cambios</button>
                </div>
            </div>
        </div>
    </form>
}
