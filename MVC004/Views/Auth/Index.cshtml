@{
    Layout = null;
    <div class="gradient min-vh-100"></div>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <!--CSS-->
        <link rel="stylesheet" href="./css/bootstrap.min.css">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/MVC004.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    </head>
    <body class="gradient-default">

        <div class="container">
        <div class="row ">
                <h2 class="text-center py-2 mt-lg-5 mb-5">Bienvenidos a Cartmander <img class="cartmander-logo" src="/img/fire.png" /></h2>
                <h4 class="text-center mb-5"> tu lugar donde econtraras de todo!!</h4>
        </div>

            <div class="row justify-content-center ">

                <!--FORMULARIO DE LOGIN-->
                <form method="post" asp-controller="Auth" asp-action="Index" class="col-lg-8 d-flex-column border " style="border-radius: 1rem;">

                    <!--USUARIO-->
                    <div class=" mb-3 ">
                        <label for="exampleInputEmail1" class=" mt-3 form-label">Usuario</label>
                        <input type="text" asp-for="emailUser" id="exampleInputEmail1" aria-describedby="emailHelp" class="form-control">
                    </div>

                    <!--CONTRASENA-->
                    <div class=" mb-3">
                        <label for="exampleInputPassword1" class="form-label">Contrasena</label>
                        <input type="password" asp-for="contraseniaUser" id="user-password" id="exampleInputPassword1" class="form-control">
                    </div>

                    <!--BOTON-->
                    <div class="d-grid mb-3">
                        <button type="submit" class="btn btn-outline-primary"> Login</button>
                    </div>

                    <!--REGISTRO-->
                    <div class="text-center mb-3 ">
                        <span>No estas registrado? <a asp-controller="Clientes" asp-action="RegCliente">Registrate</a></span>
                    </div>


                </form>


            </div>

        </div>

        <!--JS-->
        <script src="./"></script>
    </body>
    </html>
}