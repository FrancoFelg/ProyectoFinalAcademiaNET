@{
}
<body>
   
<div class="container justify-items-center">
    <h2>lista de proveedores </h2>
    <div class="mb-2">
        <a asp-action="RegistroProv" asp-controller="Proveedores" class="btn btn-outline-info">Registrar </a>
    </div>

    <div>
 <table class="table table-dark table-striped-columns g-6">
          <tr>
         <th>Id</th>
         <th>Nombre</th>
         <th>Ubicacion</th>
         <th>Domicilio</th>
         <th>Tipo de Documento</th>
         <th>Numero de Documento</th>
         <th>Opcion1</th>
         <th>Opcion2</th>


     </tr>
    @foreach (var item in Model)
    {
           

           <tr>
                <th>@item.id</th>
                <th>@item.nombre</th>
                <th>@item.ubicacion</th>
                <th>@item.direccion</th>
                <th>@item.tipo_doc</th>
                <th>@item.nro_doc</th>
                <th>  <a asp-action="ModificarProv" asp-controller="Proveedores" class="btn btn-outline-primary" asp-route-id="@item.id">Modificar</a></th>
                    <th>  <a asp-action="EliminarProv" asp-controller="Proveedores" class="btn btn-outline-danger" asp-route-id="@item.id">eliminar</a></th>
           </tr>
            


    }
 </table>
 </div>
 </div>
</body> 


