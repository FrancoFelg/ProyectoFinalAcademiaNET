@model ProductoRelOrden
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <h2>@Model.productoRelProveedor.producto.nombre</h2>
    <h3>$ @Model.productoRelProveedor.precioVenta</h3>
    <p>Proveedor: @Model.productoRelProveedor.proveedor.nombre (DNI = @Model.productoRelProveedor.proveedor.nro_doc), Ubicación: @Model.productoRelProveedor.proveedor.ubicacion @Model.productoRelProveedor.proveedor.direccion </p>


    <form asp-controller="ProductoRelOrdenes" asp-action="Create" method="post">
        <div class="container">
            <div class="row">
                <input asp-for="productoRelProveedor.id" type="hidden">

                <label for="ordenId">ID Orden</label>
                <input asp-for="ordenId" type="number" class="form-control" id="ordenId" placeholder="Ingrese ID de la Orden">

                <label for="cantidad">Ingresar Cantidad</label>
                <input asp-for="cantidad" type="number" class="form-control" id="cantidad" placeholder="Ingrese la cantidad a comprar">

                <div class="d-flex justify-content-between">
                    <button asp-controller="ProductoRelOrdenes" asp-action="Create" class="btn btn-primary">Guardar cambios</button>
                </div>
            </div>
        </div>

    </form>
}
