@using Microsoft.AspNetCore.Identity;

<!DOCTYPE html>
<html lang="en">
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MVC004.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/StyleSheet.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>    
        <main role="main">        
            <div class="gradient min-vh-100">
            
            </div>
                <!-- Navbar -->
            
            <div class="container p-4">
                    <div class="row">
                        <div class="col-sm-2 col-12  d-flex justify-content-center align-items-center">
                            <!-- Logo -->
                            <h1 class="p-2"><span class="cartmander-title">Cartmander</span></h1>
                            <img class="cartmander-logo" src="/img/fire.png"/>
                        </div>

                <div class="col-sm-10 col-12 p-2">
                            <ul class="d-flex justify-content-between navb-list">
                                <li> <a asp-controller="Home" asp-action="Index">Inicio</a> </li>
                                


                                @if (User.IsInRole("Admin") || (User.IsInRole("Vendedor") ) )  {
                                <li> <a asp-controller="Product" asp-action="Index">Productos</a> </li>
                                    <li> <a asp-controller="Orden" asp-action="Index">Ordenes</a> </li>
                                    <li> <a asp-controller="Proveedores" asp-action="Index">Proveedores</a> </li>                                
                                }                                
                                @if (User.IsInRole("Admin") )
                                {
                                    <li> <a asp-controller="Clientes" asp-action="Index">Clientes</a> </li>
                                    <li> <a asp-controller="Empleados" asp-action="Index">Empleados</a> </li>
                                    <li> <a asp-controller="Promocion" asp-action="Index">Promocion</a> </li>
                                }
                                
                                
                            <li> <a href="#">Q&A</a> </li>
                                <li> <a asp-controller="Auth" asp-action="Salir">Cerrar sesion</a> </li>
                                
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Navbar -->
                
            
                
                <div class="gradient-default">
                @RenderBody()
                </div>
                <!-- Footer -->
                <div class="min-vw-100 gradient-default">
                    <div class="container mt-5">
                        <div class="row text-center">
                            <div class="col-3">
                                <p>Cartmander</p>                                
                            </div>
                            <div class="col-3">
                                <p>¡Únete a nosotros y vende productos!</p>
                            </div>
                            <div class="col-3">
                                <p>¡Mira nuestro catálogo!</p>
                            </div>
                            <div class="col-3">
                                <p>¿Tienes dudas? Consulta nuestro FAQ</p>
                            </div>
                       </div>
                </div>
            </div>
                <!-- Footer -->
            
        </main>    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
</body>
</html>
